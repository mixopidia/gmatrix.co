import React, { useEffect, useState } from "react";
import axios from "axios";

// CRA exposes only vars starting with REACT_APP_
const API_BASE = process.env.REACT_APP_API_BASE || "http://localhost:4000";

export default function MarketPairs() {
  const [markets, setMarkets] = useState([]);

  useEffect(() => {
    axios
      .get(`${API_BASE}/api/markets`)
      .then((res) => {
        const data = res.data.value || res.data;
        setMarkets(data);
      })
      .catch((err) => console.error("Error loading markets:", err));
  }, []);

  return (
    <div className="market-pairs">
      <table>
        <thead>
          <tr>
            <th>Pair</th>
            <th>Last Price</th>
            <th>Change</th>
          </tr>
        </thead>
        <tbody>
          {markets.length === 0 ? (
            <tr>
              <td colSpan="3">No markets available</td>
            </tr>
          ) : (
            markets.map((m) => (
              <tr key={m._id}>
                <td>{m.symbol}</td>
                <td>-</td>
                <td>-</td>
              </tr>
            ))
          )}
        </tbody>
      </table>
    </div>
  );
}
